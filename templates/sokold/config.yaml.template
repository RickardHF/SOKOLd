# {{PROJECT_NAME}} Sokold Configuration

# Sokold AI-powered code generation configuration
# Generated: {{DATE}}
# Version: {{VERSION}}

# AI Tool Settings
# ================
# Which AI CLI tool to use for code generation
tool: copilot  # Options: copilot, claude

# Model to use (optional - uses tool's default if not set)
# Examples: gpt-4, gpt-4-turbo, claude-3-opus, claude-3-sonnet
# model: gpt-4

# Auto-approve all tool calls without prompting
autoApprove: true

# Workflow Settings
# =================
workflow:
  # Force all features to use current branch (no new branches/folders)
  # When true: specs go in specs/main/, no branch validation
  # When false: specs go in specs/###-feature-name/, requires feature branch
  currentBranchOnly: false

# Project Settings
# ================
project:
  name: {{PROJECT_NAME}}
  language: {{LANGUAGE}}
  framework: {{FRAMEWORK}}

# Prompt templates location
prompts:
  directory: prompts
  default: default.md

# Code generation settings
generation:
  style: idiomatic
  comments: minimal
  tests: alongside

# Output settings
output:
  format: human  # Options: human, json
  verbose: false
  colors: true
